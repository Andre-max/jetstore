<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Play" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#ff00ff</item>
        <item name="colorAccent">#ff00ff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Play.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Play.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Play.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>